@model IEnumerable<DavinTI.Models.Telefone>

<table class="table table-striped table-bordered table-hover minha-tabela">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Número</th>
            <th>Contato</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var telefone in Model)
        {
                <tr>
                    <td>@telefone.Id</td>
                    <td>@telefone.Numero</td>
                    <td>@telefone.Contato?.Nome</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@telefone.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalDeletar"
                                onclick="setTelefoneIdDeletar(@telefone.Id)">
                            <i class="bi bi-trash"></i> Excluir
                        </button>
                    </td>
                </tr>
        }
    </tbody>
</table>
